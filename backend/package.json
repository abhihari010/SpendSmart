{
  "name": "@spendsmart/backend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "nodemon app.js",
    "start": "node app.js",
    "test": "node --experimental-vm-modules ../node_modules/jest/bin/jest.js __tests__/*.test.mjs",
    "test:unit": "node --experimental-vm-modules ../node_modules/jest/bin/jest.js __tests__/!(integration).test.mjs",
    "test:integration": "node --experimental-vm-modules ../node_modules/jest/bin/jest.js __tests__/integration.test.mjs",
    "test:all": "npm run test:unit && npm run test:integration"
  },
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^9.0.0",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "tesseract.js": "^6.0.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "jest": "^30.2.0",
    "mongodb-memory-server": "^10.3.0",
    "nodemon": "^3.1.0",
    "supertest": "^7.1.4"
  }
}
